{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DocPro",
  "version": "0.1.0",
  "identifier": "com.docpro.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "DocPro - Facturation",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "DocPro",
    "copyright": "Copyright 2025 DocPro. Tous droits réservés.",
    "category": "Finance",
    "shortDescription": "Logiciel de facturation pour indépendants",
    "longDescription": "DocPro est un logiciel de création de devis et factures destiné aux auto-entrepreneurs, micro-entreprises et PME.",
    "windows": {
      "nsis": {
        "displayLanguageSelector": false,
        "installerIcon": "icons/icon.ico",
        "languages": ["French"],
        "installMode": "currentUser"
      }
    }
  }
}
